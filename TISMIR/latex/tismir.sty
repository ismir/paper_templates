%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Title and Section Layout
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\usepackage{titling}
\pretitle{\vspace{-3em}\begin{flushleft}\sf\bfseries\LARGE}
\posttitle{\par\end{flushleft}}
\preauthor{\begin{flushleft}\Large\sf}
\postauthor{\par\end{flushleft}\vspace{-5em}}

\usepackage{titlesec}

\titleformat{\section}
  {\large\sf\bfseries}{\thesection.}
  {8pt \@plus.2ex}{}[]

\titleformat{\subsection}
  {\sf\bfseries}{\thesubsection}
  {8pt \@plus.2ex}{}[]

\titleformat{\subsubsection}
  {\itshape}{\thesubsubsection}
  {8pt \@plus.2ex}{}[]

\titlespacing*{\section}
  {0pt}{2ex}{0pt}

\titlespacing*{\subsection}
  {0pt}{2ex}{0pt}

\titlespacing*{\subsubsection}
  {0pt}{2ex}{0pt}


